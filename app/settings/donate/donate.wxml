<import src="/components/template" />
<page-meta
  background-text-style="{{darkmode? 'dark': 'light'}}"
  background-color="{{color.bgColor}}"
  background-color-top="{{color.bgColorTop}}"
  background-color-bottom="{{color.bgColorBottom}}"
  root-background-color="{{color.bgColor}}"
/>
<view class="{{theme}}">
  <template is="nav" data="{{...page, theme}}" />
  <template is="body" data="{{page, theme}}" />
  <view class="qrcode-wrapper">
    <image
      class="qrcode"
      lazy-load
      mode="widthFix"
      src="https://mp.innenu.com/img/donate/Wechat.jpg"
      data-name="Wechat"
      catch:tap="save"
    />
    <image
      class="qrcode"
      lazy-load
      mode="widthFix"
      src="https://mp.innenu.com/img/donate/Alipay.jpg"
      data-name="Alipay"
      catch:tap="save"
    />
  </view>
  <list config="{{list}}" />
  <template is="title" data="{{ text: '备注', theme, darkmode}}" />
  <my-text config="{{text}}" />
  <footer />
</view>
