<import src="/components/template" />
<page-meta
  background-text-style="{{darkmode? 'dark': 'light'}}"
  background-color="{{color.bgColor}}"
  background-color-top="{{color.bgColorTop}}"
  background-color-bottom="{{color.bgColorBottom}}"
/>
<view class="{{theme}}">
  <template is="nav" data="{{...page, theme}}" />
  <template is="body" data="{{page, theme}}" />
  <view class="QRCodeCtn">
    <image
      class="QRCode1"
      lazy-load
      mode="widthFix"
      src="https://v3.mp.innenu.com/img/donate/Wechat.jpg"
      data-name="Wechat"
      catch:tap="save"
    />
    <image
      class="QRCode2"
      lazy-load
      mode="widthFix"
      src="https://v3.mp.innenu.com/img/donate/Alipay.jpg"
      data-name="Alipay"
      catch:tap="save"
    />
  </view>
  <view class="donate-list-wrapper">
    <view class="title">赞赏支持列表:</view>
    <view class="year">2020:</view>
    <block wx:if="{{donate2020}}">
      <view wx:for="{{donate2020}}" wx:key="*this" class="item">
        {{index + 1}}.
        <text style="font-weight: 500;">{{item[0]}}</text>
        赞赏 {{item[1]}} 元
      </view>
      <view class="result">共计: {{sum2020 || 0}} 元</view>
      <view class="result">结余: {{sum2020 - 600}} 元</view>
    </block>
    <view wx:else>暂无赞赏支持</view>
    <view class="year">2019:</view>
    <block wx:if="{{donate2019}}">
      <view wx:for="{{donate2019}}" wx:key="*this" class="item">
        {{index + 1}}.
        <text style="font-weight: 500;">{{item[0]}}</text>
        赞赏 {{item[1]}} 元
      </view>
      <view class="result">共计: {{sum2019}} 元</view>
      <view class="result">结余: {{income2019}} 元</view>
    </block>
    <view wx:else>暂无赞赏支持</view>
  </view>
  <foot />
</view>
