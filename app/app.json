{
  "entryPagePath": "page/main/main",
  "pages": [
    "page/main/main",
    "page/function/function",
    "page/guide/guide",
    "page/intro/intro",
    "page/user/user",
    "page/search/search"
  ],
  "subPackages": [
    {
      "root": "function",
      "pages": [
        "cal/cal",
        "calendar/calendar",
        "map/map",
        "player/player",
        "video/video",
        "PEcal/PEcal",
        "weather/weather",
        "wechat/wechat",
        "wechat/detail"
      ]
    },
    {
      "root": "module",
      "pages": ["page", "web", "function", "situs"]
    },
    {
      "root": "settings",
      "pages": [
        "about/about",
        "auth/auth",
        "donate/donate",
        "donate/list",
        "log/log",
        "outlook/outlook",
        "storage/storage"
      ]
    }
  ],
  "preloadRule": {
    "page/main/main": {
      "network": "all",
      "packages": ["module"]
    },
    "page/guide/guide": {
      "network": "all",
      "packages": ["module"]
    },
    "page/intro/intro": {
      "network": "all",
      "packages": ["module"]
    },
    "page/function/function": {
      "network": "all",
      "packages": ["function"]
    },
    "page/user/user": {
      "network": "all",
      "packages": ["settings"]
    }
  },
  "window": {
    "navigationBarBackgroundColor": "@navBgColor",
    "navigationBarTextStyle": "@navTextStyle",
    "navigationBarTitleText": "in东师",
    "navigationStyle": "custom",
    "backgroundColor": "@bgColor",
    "backgroundTextStyle": "@bgTxtStyle",
    "backgroundColorTop": "@bgColorTop",
    "backgroundColorBottom": "@bgColorBottom",
    "pageOrientation": "portrait"
  },
  "tabBar": {
    "custom": false,
    "color": "@tabColor",
    "selectedColor": "#2ecc71",
    "borderStyle": "@tabBorderStyle",
    "backgroundColor": "@tabBgColor",
    "position": "bottom",
    "list": [
      {
        "pagePath": "page/main/main",
        "text": "首页",
        "iconPath": "@homeIcon",
        "selectedIconPath": "icon/tab/home-active.png"
      },
      {
        "pagePath": "page/intro/intro",
        "text": "东师介绍",
        "iconPath": "@introIcon",
        "selectedIconPath": "icon/tab/intro-active.png"
      },
      {
        "pagePath": "page/guide/guide",
        "text": "东师指南",
        "iconPath": "@guideIcon",
        "selectedIconPath": "icon/tab/guide-active.png"
      },
      {
        "pagePath": "page/function/function",
        "text": "功能大厅",
        "iconPath": "@functionIcon",
        "selectedIconPath": "icon/tab/function-active.png"
      },
      {
        "pagePath": "page/user/user",
        "text": "我的东师",
        "iconPath": "@userIcon",
        "selectedIconPath": "icon/tab/user-active.png"
      }
    ]
  },
  "networkTimeout": {
    "request": 5000,
    "connectSocket": 8000,
    "uploadFile": 8000,
    "downloadFile": 25000
  },
  "debug": true,
  "resizable": true,
  "permission": {
    "scope.userLocation": {
      "desc": "您的位置信息将用于校园地图导航"
    }
  },
  "requiredBackgroundModes": ["audio"],
  "usingComponents": {
    "card": "/components/common/card/card",
    "copy": "/components/common/copy/copy",
    "doc": "/components/common/doc/doc",
    "ex-list": "/components/common/ex-list/list",
    "footer": "/components/common/footer/footer",
    "grid": "/components/common/grid/grid",
    "img": "/components/common/img/img",
    "intro": "/components/common/intro/intro",
    "list": "/components/common/list/list",
    "media": "/components/common/media/media",
    "my-text": "/components/common/text/text",
    "phone": "/components/common/phone/phone",
    "share": "/components/common/share/share",
    "my-swiper": "/components/common/swiper/swiper"
  },
  "style": "v2",
  "darkmode": true,
  "themeLocation": "style/theme.json",
  "sitemapLocation": "sitemap.json",
  "lazyCodeLoading": "requiredComponents",
  "singlePage": { "navigationBarFit": "float" }
}
