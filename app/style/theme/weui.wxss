.weui,
.weuigrey {
  width: 100%;
  min-height: 100%;
  background-color: #f8f8f8;

  text-align: center;
  font-family: "Helvetica Neue", FZKTJW, -apple-system-font, "PingFang SC",
    Helvetica, STHeiti, Tahoma, Simsun, sans-serif !important;
}

@media (prefers-color-scheme: dark) {
  .weui {
    background-color: #000;
    color: #fff;
  }
}

@media (prefers-color-scheme: dark) {
  .weui.grey {
    background-color: #10110b;
    color: #fff;
  }
}
