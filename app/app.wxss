/* css引入 */
@import "style/common.wxss";

@import "style/lib/index.wxss";

@import "style/theme/index.wxss";

page {
  height: 100%;

  text-align: center;
  font-size: 30rpx;
  font-family: -apple-system-font, "PingFang SC", "Helvetica Neue", Helvetica,
    STHeiti, Tahoma, sans-serif;
  line-height: 1.4;
}

@media (min-width: 480px) {
  page {
    font-size: 20px;
  }
}

view,
scroll-view,
swiper,
button,
input,
textarea,
label,
navigator,
image {
  box-sizing: border-box;
}
