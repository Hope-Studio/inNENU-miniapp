.wechat-logo-wrapper {
  display: flex;
  flex-wrap: wrap;
}

.wechat-logo {
  width: 50%;
  padding: 8px 12px;
}

.wechat-logo .logo {
  width: 200rpx;
  height: 200rpx;

  border-radius: 50%;

  overflow: hidden;
}

.wechat-logo .name {
  margin: 4px auto;
  font-size: 17px;
  font-weight: 600;
}

.wechat-logo .desc {
  margin: 4px auto;
  color: var(--dark-grey);
  font-size: 14px;
}
