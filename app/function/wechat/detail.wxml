<page-meta
  background-text-style="{{darkmode? 'dark': 'light'}}"
  background-color="{{color.bgColor}}"
  background-color-top="{{color.bgColorTop}}"
  background-color-bottom="{{color.bgColorBottom}}"
  root-background-color="{{color.bgColor}}"
/>

<view class="ios grey">
  <view
    class="back-button"
    style="top: {{statusBarHeight + 5}}px;"
    hover-class="button-hover"
    catch:tap="back"
  >
    <image
      class="back-icon"
      src="/icon/{{firstPage? 'home': 'back'}}{{darkmode? 'White': ''}}.svg"
    />
  </view>
  <view class="intro-wrapper" style="padding-top: {{statusBarHeight}}px;">
    <!-- 高斯模糊背景 -->
    <image class="background" src="{{config.logo}}" mode="aspectFill" />
    <view class="intro">
      <!-- 图标 -->
      <image class="icon" src="{{config.logo}}" />
      <!-- 名称 -->
      <view class="name">{{config.name}}</view>
      <!-- 详情介绍 -->
      <view class="desc">{{config.desc}}</view>
      <!-- 关注 -->
      <view
        wx:if="{{config.follow}}"
        class="follow"
        hover-class="hover"
        catch:tap="follow"
        >关注</view
      >
    </view>
  </view>
  <view class="wechat-wrapper">
    <view
      class="card"
      wx:for="{{config.content}}"
      wx:key="title"
      hover-class="button-hover"
      hover-stay-time="100"
      data-title="{{item.title}}"
      data-url="{{item.url}}"
      catch:tap="navigate"
    >
      <image class="img" src="{{item.cover}}" mode="aspectFill" />
      <view class="detail">
        <view wx:if="{{item.logo}}" class="icon">
          <image class="logo" src="{{item.logo}}" />
          <view class="name">{{item.name}}</view>
        </view>
        <view class="title">{{item.title}}</view>
        <view class="desc">{{item.desc}}</view>
      </view>
    </view>
  </view>
  <footer config="{{footer}}" />
</view>
