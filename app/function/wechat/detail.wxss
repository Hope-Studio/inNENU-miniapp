.card {
  max-width: 517px;
  margin: 12px 15px;
  background-color: var(--block-bgcolor);
  border-radius: 8px;
  box-shadow: 1px 1px 2px 3px var(--card-shadow);

  text-align: left;
  overflow: hidden;
}

@media (min-width: 630px) {
  .card {
    margin: 12px auto;
  }
}

.card .img {
  width: 100%;
  height: 290rpx;
  max-height: 220px;
}

.card .detail {
  margin: 0;
  padding: 12px 15px;
}

.card .title {
  margin-bottom: 8px;
  font-size: 16px;
  font-weight: 500;
}

.card .desc {
  color: var(--dark-grey);
  font-size: 14px;
  line-height: 1.4;
}

.card .icon {
  display: flex;
  float: right;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.card .logo {
  width: 28px;
  height: 28px;
}

.card .name {
  margin: 2px auto;
  color: var(--grey);
  font-size: 12px;
}

@media (min-width: 480px) {
  .card .title {
    margin-bottom: 10px;
    font-size: 20px;
  }

  .card .desc {
    font-size: 18px;
  }

  .card .logo {
    width: 40px;
    height: 40px;
  }

  .card .name {
    font-size: 16px;
  }
}
