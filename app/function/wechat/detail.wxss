.intro-wrapper {
  position: relative;
  width: 100%;
  overflow: hidden;
}

.intro-wrapper .background {
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;

  width: 100%;
  height: 100%;
  opacity: 0.6;

  filter: blur(8px);
}

.intro-wrapper .intro {
  display: flex;
  position: relative;
  z-index: 2;

  width: 100%;
  height: 100%;

  padding: 20px 0 10px 0;

  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.intro-wrapper .icon {
  width: 200rpx;
  max-width: 150px;
  height: 200rpx;
  max-height: 150px;
}

.intro-wrapper .name {
  margin: 4px 0;
  font-size: 18px;
  text-shadow: 0 0 1px var(--grey);
}

.intro-wrapper .desc {
  max-width: 80%;
  color: var(--grey-three);
  font-size: 14px;
}

.intro-wrapper .follow {
  margin-top: 8px;
  padding: 8px 16px;
  background-color: #3478f7;
  border-radius: 24px;

  color: #fff;
  line-height: 1;
}

.intro-wrapper .follow.hover {
  background-color: #71a1f9;
}

.card {
  max-width: 517px;
  margin: 12px 15px;
  background-color: var(--block-bgcolor);
  border-radius: 8px;
  box-shadow: 1px 1px 2px 3px var(--card-shadow);

  text-align: left;
  overflow: hidden;
}

@media (min-width: 547px) {
  .card {
    margin: 12px auto;
  }
}

.card .img {
  width: 100%;
  height: 290rpx;
  max-height: 220px;
}

.card .detail {
  margin: 0;
  padding: 12px 15px;
}

.card .title {
  margin-bottom: 8px;
  font-size: 16px;
  font-weight: 500;
}

.card .desc {
  color: var(--dark-grey);
  font-size: 14px;
  line-height: 1.4;
}

.card .icon {
  display: flex;
  float: right;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.card .logo {
  width: 28px;
  height: 28px;
}

.card .name {
  margin: 2px auto;
  color: var(--grey);
  font-size: 12px;
}

@media (min-width: 480px) {
  .card .title {
    margin-bottom: 10px;
    font-size: 20px;
  }

  .card .desc {
    font-size: 18px;
  }

  .card .logo {
    width: 40px;
    height: 40px;
  }

  .card .name {
    font-size: 16px;
  }
}
