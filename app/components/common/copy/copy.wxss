.copy-wrapper {
  max-width: var(--max-width);
  margin: 2px var(--horizontal-margin);
  padding: 8px 10px 8px 15px;
  background-color: var(--block-bgcolor);
  border-radius: 8px;

  color: var(--text-color);
  line-height: 1.2;
  align-items: center;
  overflow: hidden;
}

.copy-wrapper .text {
  text-align: justify;
  font-size: 17px;
  flex: 1 1 auto;
}

.copy-wrapper .copy {
  float: right;
  width: 20px;
  height: 20px;
  margin: 8px;
}

.copy-wrapper .icon {
  width: 100%;
  height: 100%;
}
