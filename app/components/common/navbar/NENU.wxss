/* NENU nav */
.NENUnav,
.NENUnav2 {
  display: flex;
  position: fixed;
  z-index: 99;

  width: 100%;
  background-color: #5ab879;

  color: #fff;
  justify-content: center;
  align-items: center;
}

.NENUnav {
  box-sizing: content-box;
  height: 44px;
  padding: 2px 0;
  border-bottom: 1rpx solid var(--bgcolor-grey);
  justify-content: flex-start;
}

.NENU-navText {
  position: absolute;

  width: 100%;

  text-align: center;
  font-size: 18px;
  font-weight: 500;
}

.NENUNavTitle {
  position: absolute;

  max-width: 517px;
  padding: 6.5px 9px;
  background-color: rgba(0, 0, 0, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.15);
  border-radius: 17px;

  color: #fff;
  font-size: 18px;
  line-height: 1;
}

.NENUHead .back-icon {
  color: var(--text-color);
}
