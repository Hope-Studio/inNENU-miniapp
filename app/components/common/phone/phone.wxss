.phone-header {
  max-width: var(--max-width);
  min-height: 36px;
  margin: 0 var(--horizontal-margin);
  padding: 12px 15px 4px 15px;

  color: var(--text-color);
  text-align: left;
  font-size: 19px;
  font-weight: 500;
}

.grey .phone-header {
  padding: 21px 15px 5px 15px;
  color: var(--dark-grey);
  font-size: 13px;
  font-weight: 400;
}

.phone-wrapper {
  display: flex;

  max-width: var(--max-width);
  margin: 2px var(--horizontal-margin);
  padding: 0 15px;
  background-color: var(--block-bgcolor);
  border-radius: 8px;

  color: var(--text-color);
  line-height: 2.5;
  align-items: center;
  overflow: hidden;
}

.phone-wrapper .phone-icon {
  width: 24px;
  height: 24px;
  margin-right: 15px;
}

.phone-wrapper .number {
  text-align: left;
  font-size: 20px;
  font-weight: 500;
  flex: 1 1 auto;
}

.phone-wrapper .call,
.phone-wrapper .add {
  width: 26px;
  height: 26px;
  margin: 0 4px;
  border-radius: 13px;
  overflow: hidden;
}

.phone-wrapper .icon {
  width: 100%;
  height: 100%;
}
