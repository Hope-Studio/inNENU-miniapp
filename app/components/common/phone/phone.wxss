.phone-wrapper {
  display: flex;

  max-width: 517px;
  margin: 2px 15px;
  padding: 0 15px;
  background-color: var(--block-bgcolor);
  border-radius: 8px;

  color: var(--text-color);
  line-height: 2.5;
  align-items: center;
  overflow: hidden;
}

@media (min-width: 547px) {
  .phone-wrapper {
    margin: 2px auto;
  }
}

@media (prefers-color-scheme: light) {
  .phone-wrapper {
    background-color: var(--bgcolor-grey);
  }

  .grey .phone-wrapper {
    background-color: var(--block-bgcolor);
  }
}

.phone-wrapper .phone-icon {
  width: 24px;
  height: 24px;
  margin-right: 15px;
}

.phone-wrapper .number {
  text-align: left;
  font-size: 20px;
  font-weight: 500;
  flex: 1 1 auto;
}

.phone-wrapper .call,
.phone-wrapper .add {
  width: 26px;
  height: 26px;
  margin: 0 4px;
  border-radius: 13px;
  overflow: hidden;
}

.phone-wrapper .icon {
  width: 100%;
  height: 100%;
}
