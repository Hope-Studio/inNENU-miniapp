/* swiper */
.swiper-wrapper {
  position: relative;
  width: 100%;
}

.swiper {
  width: 100%;
  height: 400rpx;
}

.swiper .image {
  width: 100%;
  height: 100%;
}

.swiper.card .image {
  width: calc(100% - 30px);
  height: 360rpx;
  margin: 20px 15px;
  border-radius: 16rpx;
  overflow: hidden;
}

.swiper-dots {
  display: flex;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  justify-content: center;
}

.swiper-dots .dot {
  width: 14rpx;
  height: 14rpx;
  margin: 0 8rpx;
  background: #fff;
  border-radius: 8rpx;
  transition: all 0.6s;
}

.swiper-dots .dot.active {
  width: 24rpx;
  background: #fff;
}
