{
  "name": "mynenu",
  "version": "2.4.1",
  "private": true,
  "workspaces": [
    "app/",
    "server/"
  ],
  "scripts": {
    "watch": "gulp watch && tsc --watch",
    "build": "gulp build && tsc",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 2",
    "commit": "git cz",
    "doc": "typedoc --options ./typedoc.json",
    "lint": "prettier --check --write . && prettier --check --write --parser babel-flow **/*.wxs && prettier --check --write --parser html **/*.wxml && eslint --fix --ext .ts,.wxs . && stylelint --fix **/*.scss",
    "lint:check": "prettier --check . && prettier --check --parser babel-flow **/*.wxs && prettier --check --parser html **/*.wxml && eslint --ext .ts,.wxs . && stylelint **/*.scss",
    "ts:watch": "tsc --watch",
    "ts:compile": "tsc",
    "upgrade": "ncu -u && yarn install && yarn upgrade"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mister-Hope/inNENU.git"
  },
  "author": "Mr.Hope",
  "license": "Mr.Hope LICENSE",
  "bugs": {
    "url": "https://github.com/Mister-Hope/inNENU/issues"
  },
  "homepage": "https://mrhope.site",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.7.0",
    "@typescript-eslint/parser": "4.7.0",
    "conventional-changelog-cli": "2.1.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.13.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-prettier": "3.1.4",
    "gulp": "4.0.2",
    "gulp-rename": "2.0.0",
    "gulp-sass": "4.1.0",
    "husky": "4.3.0",
    "lint-staged": "10.5.1",
    "miniprogram-api-typings": "3.2.0",
    "prettier": "2.1.2",
    "stylelint": "13.7.2",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-standard": "20.0.0",
    "stylelint-order": "4.1.0",
    "stylelint-scss": "3.18.0",
    "svgo": "1.3.2",
    "typescript": "4.1.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.{js,ts,json,yaml,.md}": "prettier --write",
    "*.wxss": "stylelint --fix",
    "*.wxml": "prettier --parser html --write",
    "*.wxs": "prettier --parser babel-flow --write"
  }
}
